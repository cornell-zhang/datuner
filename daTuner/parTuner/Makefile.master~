# Makefile template by Guojie Luo

ISPD11_OUT = master$(MY_TOOLS_POSTFIX)

MAINSRC     = controler.cpp bandit.cpp space_divider4ISE.cpp space_divider4Vivado.cpp space_divider4VPR.cpp msg_passing.cpp space_partition.cpp 


ISPD11_SRC = $(MAINSRC)

ISPD11_LIB =
all :: $(MY_TOOLS_BIN)/$(ISPD11_OUT)

ISPD11_LDFLAGS = $(ISPD11_LIB) $(MY_TOOLS_LDFLAGS)
ISPD11_OBJ = $(ISPD11_SRC:%.cpp=$(MY_TOOLS_BUILD)/%.o)
ISPD11_DEP = $(patsubst %,%.d,$(basename $(ISPD11_OBJ)))

$(ISPD11_OUT) :: $(ISPD11_OBJ)
	$(MY_TOOLS_CC) -o $(MY_TOOLS_BIN)/$(ISPD11_OUT) $^ $(ISPD11_LDFLAGS)

$(MY_TOOLS_BIN)/$(ISPD11_OUT) :: $(ISPD11_OBJ)
	$(MY_TOOLS_CC) -o $@ $^ $(ISPD11_LDFLAGS)

clean ::
	rm -f $(ISPD11_DEP)
	rm -f $(ISPD11_OBJ)
	rm -f $(MY_TOOLS_BIN)/$(ISPD11_OUT)

-include $(ISPD11_DEP)
